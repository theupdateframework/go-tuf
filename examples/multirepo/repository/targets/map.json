
{
  "repositories": {
    "sigstore-tuf-root": ["https://tuf-repo-cdn.sigstore.dev"],
    "staging":   ["https://raw.githubusercontent.com/sigstore/root-signing/main/repository/repository"]
  },
  "mapping": [
    {
      "paths":        ["fulcio*", "*.json"],
      "repositories": ["staging"],
      "threshold": 1,
      "terminating":  true
    },
    {
      "paths":        ["*.pub"],
      "repositories": ["sigstore-tuf-root", "staging"],
      "threshold": 2,
      "terminating":  false
    },
    {
      "paths":        ["*"],
      "repositories": ["sigstore-tuf-root"],
      "terminating": true,
      "threshold": 1
    }
  ]
}
